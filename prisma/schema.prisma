generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  uuid              String
  fullName          String
  phoneNumber       String
  coutryCode        String
  countryCodeName   String
  email             String
  password          String
  address           Address
  passwordResetCode String
  eventUUID         String
  role              Int // 1. System Admin, 2. Event Admin, 3. Normal User 
}

model Event {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  uuid        String
  name        String
  description String
  startDate   DateTime
  endDate     DateTime
  startTime   String
  endTime     String
  location    Address
  venue       String
}

type Address {
  street String
  city   String
  state  String
  zip    String
}
